// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'

body.application, input, textarea
    color: #bbb
    background: none repeat scroll 0 0 rgba(40, 40, 40, 0.8)

a, a:visited
    color: #27aaf2
    text-decoration: none
a:focus
    outline: none

#content
    padding: 1em

button, input[type=button]
    background-color: inherit

div.main-title
    margin: 0
    padding: 0 1em
    background: #232323
    border: 1px solid #262626

    h1
        background: #1f1f1f
        border-top: 1px solid #262626
        border-bottom:1px solid #161712
        padding: .5em .7em
        .buttons
            cursor: pointer
            float: right
            button
                border: none
    form 
        display: none
        .buttons
            display: inline
        label
            margin: .5em
        input
            display: inline-block
            margin: .5em
            padding: .5em
            width: 24em
            background: #262626
            border: 1px double #171717

        .url-field
            width: 50%
            max-width: 50em
        button
            border: none
            vertical-align: middle

.feeds
    margin: 2em 0
    padding: 1em 1em 0
    background: #232323
    border: 1px solid #262626
    display: inline-block
    vertical-align: top
    max-width: 17%

    .tag
        cursor: pointer
        margin-bottom: 1em
        button
            border: none
            vertical-align: middle
            img
                width: 16px
                height: 16px
        &.show
            .feed
                display: block

    .feed
        font-size: .9em;
        display: none
        cursor: pointer
        padding: .2em
        margin: .2em
        white-space: nowrap
        .buttons
            display: inline-block
            vertical-align: middle
        div.title
            overflow: hidden
            text-overflow: ellipsis
            vertical-align: top
            a
                margin: 0 .3em
            a:hover
                text-decoration: none
                color: #72fa72
         .loader
             display: none
         &.loading
             .loader
                 display: inline
    .feed.show div.title
        font-weight: bold

ul.links
    margin: 2em
    padding: 0
    background: #232323
    display: inline-block
    vertical-align: top
    width: 73%
    list-style: none
    li
        border-top: 1px solid #666
        padding: 1em .5em 0
        margin: 2em 1em
        .buttons
            display: inline-block
            padding-right: .5em
            button
                border: none
                width: auto
                img
                    width: 24px
                    height: 24px
                    vertical-align: middle
        .description
            padding: .5em
            margin: .5em
            display: none
        &.new
            a:visited
                color: #2b2
        &.old
            display: none
            a
                color: #bbb
            a:visited
                color: #2b2
    &.show-old
        li.old
            display: list-item
.help
    display: none;
    p
        font-size: .9em;
